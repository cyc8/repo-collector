{
  "manifest_version": 3,
  "name": "Repo Collector",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Repo Collector",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "default_locale": "en",
  "description": "Find all repos quickly on any webpage",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"]
}
