{
  "name": "Repo Collector",
  "description": "Repo Collector scans the current webpage for repos and lists them for you.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Repo Collector",
    "default_icon": {
      "16": "repo-collector-16.png",
      "48": "repo-collector-48.png",
      "128": "repo-collector-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"]
    }
  ],
  "icons": {
    "16": "repo-collector-16.png",
    "48": "repo-collector-48.png",
    "128": "repo-collector-128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"]
}
