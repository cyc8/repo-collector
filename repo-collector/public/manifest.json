{
  "name": "Repo Collector",
  "description": "Repo Collector scans the current webpage for repos and lists them for you.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Repo Collector",
    "default_icon": {
      "16": "repo-collector-16.png",
      "48": "repo-collector-48.png",
      "128": "repo-collector-128.png"
    }
  },
  "icons": {
    "16": "repo-collector-16.png",
    "48": "repo-collector-48.png",
    "128": "repo-collector-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "./static/js/serviceWorker.js"
  },
  "permissions": ["activeTab", "tabs", "background"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
